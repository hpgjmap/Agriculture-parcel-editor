{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "lib": ["DOM", "ES2020"],
    "module": "amd",
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    // "suppressImplicitAnyIndexErrors": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["./**/*"],
  "typeRoots": ["./*", "./**/*"],
  "exclude": ["node_modules"]
}
